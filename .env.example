# Environment variables declared in this file are NOT automatically loaded by Prisma.
# Please add `import "dotenv/config";` to your `prisma.config.ts` file, or use the Prisma CLI with Bun
# to load environment variables from .env files: https://pris.ly/prisma-config-env-vars.

# Database (Neon PostgreSQL - Get from https://neon.tech)
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"

# NextAuth (v5 uses AUTH_* variables)
AUTH_URL="http://localhost:3000"
AUTH_SECRET="your-auth-secret-here"
# NextAuth (legacy)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# UploadThing (Get from https://uploadthing.com/dashboard)
UPLOADTHING_SECRET="sk_live_your-uploadthing-secret"
UPLOADTHING_APP_ID="your-app-id"

# Next.js URL for webhooks
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# SMTP Email Configuration (for LOCAL development only - Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD="your-app-password"

# Resend Email (for PRODUCTION - Get API key from https://resend.com)
# Sign up free, verify your domain, then get API key
RESEND_API_KEY="re_xxxxxxxxxxxxx"
RESEND_FROM_EMAIL="noreply@yourdomain.com"

# App name for email templates
NEXT_PUBLIC_APP_NAME=YourAppName

# Super Admin Credentials (REQUIRED - DO NOT COMMIT ACTUAL VALUES)
SUPER_ADMIN_EMAIL=admin@example.com
SUPER_ADMIN_PASSWORD="your-secure-password"
SUPER_ADMIN_NAME="Super Admin"
