generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String       @id @default(cuid())
  name             String?
  email            String       @unique
  emailVerified    DateTime?
  image            String?
  password         String?
  role             String       @default("student")
  isFrozen         Boolean      @default(false)
  isBanned         Boolean      @default(false)
  bannedAt         DateTime?
  banReason        String?
  profileVerified  Boolean      @default(false)
  sessionVersion   Int          @default(0)
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  accounts         Account[]
  enrollments      Enrollment[]
  receivedMessages Message[]    @relation("ReceivedMessages")
  sentMessages     Message[]    @relation("SentMessages")
  payments         Payment[]
  resourcePurchases ResourcePurchase[]
  purchaseRequests  PurchaseRequest[]
  sessions         Session[]
  notices          Notice[]
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model Course {
  id                   String       @id @default(cuid())
  title                String
  description          String
  image                String?
  videoUrl             String?
  price                Float        @default(0)
  isPaid               Boolean      @default(false)
  isPublished          Boolean      @default(false)
  category             String?
  level                String?
  duration             String?
  accessDurationMonths Int          @default(6)
  courseType           String       @default("recorded")
  meetingLink          String?
  meetingPlatform      String?
  scheduledStartTime   DateTime?
  scheduledEndTime     DateTime?
  isRecurring          Boolean      @default(false)
  recurringSchedule    String?
  features             String?
  whatYouWillLearn     String?
  // Course-specific Ad Settings
  adCode               String?      // Custom HTML/JS ad code for this course
  showAds              Boolean      @default(true)  // Enable/disable ads for this course
  createdAt            DateTime     @default(now())
  updatedAt            DateTime     @updatedAt
  isDeleted            Boolean      @default(false)
  enrollments          Enrollment[]
  lessons              Lesson[]
  payments             Payment[]
  chatRooms            ChatRoom[]

  @@index([isPublished])
  @@index([category])
  @@index([createdAt])
  @@index([courseType])
  @@index([scheduledStartTime])
}

model Lesson {
  id          String           @id @default(cuid())
  courseId    String
  title       String
  description String?
  content     String
  videoUrl    String?
  duration    String?
  order       Int
  isFree      Boolean          @default(false)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  course      Course           @relation(fields: [courseId], references: [id], onDelete: Cascade)
  progress    LessonProgress[]

  @@index([courseId])
  @@index([order])
}

model Enrollment {
  id         String    @id @default(cuid())
  userId     String
  courseId   String
  enrolledAt DateTime  @default(now())
  expiresAt  DateTime?
  progress   Int       @default(0)
  completed  Boolean   @default(false)
  course     Course    @relation(fields: [courseId], references: [id], onDelete: Cascade)
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
  @@index([enrolledAt])
}

model LessonProgress {
  id          String    @id @default(cuid())
  userId      String
  lessonId    String
  completed   Boolean   @default(false)
  watchTime   Int       @default(0)
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  lesson      Lesson    @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId])
}

model Payment {
  id              String   @id @default(cuid())
  userId          String
  courseId        String
  amount          Float
  currency        String   @default("usd")
  status          String
  stripePaymentId String?  @unique
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  course          Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Mentor {
  id            String   @id @default(cuid())
  name          String
  role          String
  company       String?
  bio           String
  image         String?
  expertise     String
  experience    String?
  achievements  String?
  socialLinks   String?
  isActive      Boolean  @default(true)
  displayOrder  Int      @default(0)
  totalStudents Int      @default(0)
  totalCourses  Int      @default(0)
  rating        Float    @default(5.0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([isActive, displayOrder])
}

model Message {
  id         String   @id @default(cuid())
  senderId   String
  receiverId String
  content    String
  createdAt  DateTime @default(now())
  read       Boolean  @default(false)
  receiver   User     @relation("ReceivedMessages", fields: [receiverId], references: [id])
  sender     User     @relation("SentMessages", fields: [senderId], references: [id])

  @@index([senderId])
  @@index([receiverId])
  @@index([createdAt])
}

model CheatSheet {
  id            String   @id @default(cuid())
  title         String
  description   String?
  fileUrl       String
  category      String?
  tags          String?
  isActive      Boolean  @default(true)
  downloadCount Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([category])
  @@index([isActive])
}

model SoftwareLink {
  id          String   @id @default(cuid())
  name        String
  description String?
  url         String
  category    String?
  tags        String?
  isActive    Boolean  @default(true)
  clickCount  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([isActive])
}

model Resource {
  id            String   @id @default(cuid())
  title         String   @unique
  description   String?
  type          String
  url           String?
  category      String?
  tags          String?
  isFree        Boolean  @default(true)
  price         Float?
  isActive      Boolean  @default(true)
  downloadCount Int      @default(0)
  clickCount    Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  purchases     ResourcePurchase[]

  @@index([type])
  @@index([category])
  @@index([isFree])
  @@index([isActive])
}

model ResourcePurchase {
  id         String   @id @default(cuid())
  userId     String
  resourceId String
  amount     Float
  currency   String   @default("jpy")
  status     String   @default("completed") // For future payment processing
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  resource   Resource @relation(fields: [resourceId], references: [id], onDelete: Cascade)

  @@unique([userId, resourceId])
}

model Notice {
  id          String   @id @default(cuid())
  title       String
  content     String
  priority    String   @default("normal") // normal, important, urgent
  isPublished Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  authorId    String
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([isPublished])
  @@index([priority])
  @@index([publishedAt])
  @@index([createdAt])
}

model PromoBanner {
  id              String    @id @default(cuid())
  title           String
  description     String?
  badgeText       String?   // e.g., "50% OFF", "NEW", "LIMITED TIME"
  linkUrl         String?   // Optional link to course or page
  linkText        String?   // e.g., "View Course", "Learn More"
  backgroundColor String?   @default("#ef4444") // Default red color
  textColor       String?   @default("#ffffff") // Default white text
  isActive        Boolean   @default(false)
  startDate       DateTime?
  endDate         DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([isActive])
  @@index([startDate, endDate])
}

model CodeSnippet {
  id          String   @id @default(cuid())
  title       String
  description String?
  code        String
  language    String
  userId      String
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([language])
  @@index([createdAt])
}

model PurchaseRequest {
  id           String    @id @default(cuid())
  userId       String
  itemType     String    // "course" or "resource"
  itemId       String    // courseId or resourceId
  itemTitle    String    // Store title for easy reference
  amount       Float
  currency     String    @default("jpy")
  status       String    @default("pending") // pending, approved, rejected
  message      String?   // Optional message from student
  adminNote    String?   // Note from admin when approving/rejecting
  reviewedAt   DateTime?
  reviewedBy   String?   // Admin who reviewed
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([itemType])
  @@index([createdAt])
}

model AdSenseSettings {
  id                String   @id @default(cuid())
  publisherId       String   // Google AdSense Publisher ID (ca-pub-XXXXXXXX)
  headScript        String?  @db.Text // Full AdSense script to paste in head
  isEnabled         Boolean  @default(false)
  enableAutoAds     Boolean  @default(false)
  enableInArticle   Boolean  @default(false)
  enableSidebar     Boolean  @default(false)
  enableHeader      Boolean  @default(false)
  enableFooter      Boolean  @default(false)
  inArticleSlot     String?  // Ad slot for in-article ads
  sidebarSlot       String?  // Ad slot for sidebar ads
  headerSlot        String?  // Ad slot for header ads
  footerSlot        String?  // Ad slot for footer ads
  excludedPages     String?  // Comma-separated list of pages to exclude ads
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model AdSettings {
  id                String   @id @default(cuid())
  // Active Provider Selection
  activeProvider    String   @default("none") // none, adsense, medianet, amazon, propeller, adsterra, custom
  excludedPages     String?  // Comma-separated list of pages to exclude ads
  
  // Ad Placement Controls
  showHeaderAd      Boolean  @default(true)
  showFooterAd      Boolean  @default(true)
  showSidebarAd     Boolean  @default(true)
  showInArticleAd   Boolean  @default(true)
  showHomePageAd    Boolean  @default(true)
  showCoursePageAd  Boolean  @default(true)
  showPortalAd      Boolean  @default(true)
  showBlogAd        Boolean  @default(true)
  
  // Google AdSense Settings
  adsenseEnabled      Boolean  @default(false)
  adsensePublisherId  String?  // ca-pub-XXXXXXXX
  adsenseAutoAds      Boolean  @default(false)
  adsenseHeaderSlot   String?
  adsenseFooterSlot   String?
  adsenseSidebarSlot  String?
  adsenseInArticleSlot String?
  
  // Media.net Settings
  medianetEnabled     Boolean  @default(false)
  medianetCustomerId  String?  // cid value
  medianetHeaderCode  String?  // Full ad code for header
  medianetFooterCode  String?
  medianetSidebarCode String?
  medianetInArticleCode String?
  
  // Amazon Native Ads Settings
  amazonEnabled       Boolean  @default(false)
  amazonTrackingId    String?  // Tracking ID
  amazonAdInstanceId  String?  // Ad instance ID
  amazonHeaderCode    String?
  amazonFooterCode    String?
  amazonSidebarCode   String?
  amazonInArticleCode String?
  
  // PropellerAds Settings
  propellerEnabled    Boolean  @default(false)
  propellerZoneId     String?
  propellerHeaderCode String?
  propellerFooterCode String?
  propellerSidebarCode String?
  propellerInArticleCode String?
  
  // Adsterra Settings
  adsterraEnabled     Boolean  @default(false)
  adsterraKey         String?
  adsterraHeaderCode  String?
  adsterraFooterCode  String?
  adsterraSidebarCode String?
  adsterraInArticleCode String?
  
  // Custom Ad Provider
  customEnabled       Boolean  @default(false)
  customProviderName  String?
  customHeadScript    String?  // Script to inject in <head>
  customHeaderCode    String?
  customFooterCode    String?
  customSidebarCode   String?
  customInArticleCode String?
  
  // Per-Page Ad Configuration (JSON format)
  // Stores: { "/playground": { maxAds: 2, showHeader: true, showFooter: false, showInArticle: true, showSidebar: false } }
  pageAdConfig        String?  @db.Text
  
  // Global Ad Limits
  maxAdsPerPage       Int      @default(5)
  maxInArticleAds     Int      @default(3)
  
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

// Community Chat System for Student Portal
model ChatRoom {
  id          String        @id @default(cuid())
  name        String        // Room name (e.g., "General", "Course Discussion")
  description String?       // Room description
  type        String        @default("general") // general, course-specific, etc.
  courseId    String?       // Optional: link to a specific course
  isActive    Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  messages    ChatMessage[]
  course      Course?       @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@index([type])
  @@index([courseId])
}

model ChatMessage {
  id        String   @id @default(cuid())
  content   String   @db.Text
  roomId    String
  userId    String
  userName  String   // Cached user name for display
  userImage String?  // Cached user image
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  room      ChatRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([roomId])
  @@index([userId])
  @@index([createdAt])
}
